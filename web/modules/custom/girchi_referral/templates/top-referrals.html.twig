                                    <span
                                        class="text-success font-size-4 font-size-xl-4 font-weight-bold ml-auto"
                                    >{{ user.referral_benefits > 1 ? user.referral_benefits| ged_long_format  : user.referral_benefits }} ₾</span>
                                </div>
                            </li>

                        {% endfor %}
