                    {% endif %}

                </ul>
            </div>
            <div
                class="tab-pane fade {{topReferralsMonthly is empty ? "show active" : '' }}"
                id="total-ref"
                role="tabpanel"
                aria-labelledby="total-tab-ref"
            >
                <ul class="list-group list-group-flush mt-2">
                    {% if topReferrals %}
                        {% for key,user in topReferrals  %}
