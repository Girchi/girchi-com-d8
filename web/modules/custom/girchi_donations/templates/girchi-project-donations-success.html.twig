{{ attach_library('girchi/facebook') }}

<div class="bg-gradient-green overflow-hidden">
    <div class="container">
        <!-- Start of head -->
        <div class="text-center py-4 py-sm-6">
            <h5 class="text-white text-uppercase font-weight-bold font-size-5">
                {% if project %}
                <style>
                    .navbar-expand-lg, .sticky-navbar-wrapper, .ged-progress {
                        display: none !important;
                    }
                </style>
                {% endif %}
            </h5>
            <p class="text-white font-size-3 mb-0">
{#                {{ 'Fund the GIRCHI, get the relevant GeDs and hit the leaderboard'|t }}#}
            </p>
        </div>
        <!-- End of head -->
        <!-- Start of card -->
        <div class="card mb-4 mb-sm-8">
            <div class="card-body">
                <div
                    class="modal fade"
                    id="joinFbGroup"
                    tabindex="-1"
                    role="dialog"
                    aria-labelledby="joinFbGroup"
                    aria-hidden="true"
                >
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content overflow-hidden" id="facebook-invite-modal">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="px-md-8  px-lg-4 px-xl-8 py-2 py-md-3  py-xl-4">
                  <span class="d-block text-center">
                    <i
                        class="icon-tick-inside-circle font-size-9 text-success"
                    ></i>
                  </span>

                            <h5
                                class="text-uppercase font-weight line-height-1-3 font-weight-bold text-success text-center mt-3 mb-3 mb-sm-5"
                            >
                                {% if card is not null %}
                                    {{ 'Credit car was successfully saved'|t }}
                                {% else %}
                                    გმადლობთ!
                                {% endif %}
                            </h5>

                            {% if card is not null %}
                                <div
                                    class="w-100 d-flex flex-column align-items-center mb-4 mb-sm-5"
                                >
                                    {% if card.Type() == 'MC' %}
                                        <div class="cc-green col-md-3 m-2">
                                            <span class="chip"></span>
                                            <?xml version="1.0" encoding="UTF-8"?>
                                            <img src="/{{ directory }}/images/mc_symbol.svg" height="55px" width="55px"
                                                 class="logo-mastercard" alt="">
                                            <span class="cc-number">**** **** **** {{ card.Digits() }}</span>
                                            <span class="cc-name">{{ card.Expiry(TRUE) }}</span>
                                        </div>

                                    {% elseif card.Type() == 'VISA' %}
                                        <div class="cc-dark col-md-3 m-2">
                                            <span class="chip"></span>
                                            <img src="/{{ directory }}/images/visa2.svg" class="logo-visa" alt="">
                                            <span class="cc-number">**** **** **** {{ card.Digits() }}</span>
                                            <span class="cc-name">{{ card.Expiry(TRUE) }}</span>
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}


                            {% if auth %}
                                <div
                                    class="w-100 d-flex flex-column align-items-center mb-4 mb-sm-5"
                                >
                                    <label class="form-label">{{ 'You have recieved'|t }}</label>
                                    <span
                                        class="text-success font-size-5 d-inline-flex pt-sm-2 mt-0"
                                    >
                      <i class="icon-ged"></i>
                      <span class="ml-1">{{ amount }}</span>
                    </span>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <div class="px-md-8 px-lg-3 px-xl-5 py-2 py-md-3  py-xl-4">

                            <a
                                href="https://www.legalize.ge"
                                class="btn btn-success text-uppercase btn-block btn-lg my-3 my-lg-4 text-nowrap"
                            >
                                დაბრუნდი www.legalize.ge - ზე
                            </a>
                            <a target="_blank" href="https://www.facebook.com/groups/legalize.ge.group"
                                    class="btn btn-block d-flex align-items-center justify-content-center btn-with-icon btn-lg btn-purple text-uppercase my-3 my-sm-4 text-nowrap"
                            >
                                <i class="icon-social-facebook-circular-button font-size-5 font-size-sm-7 mr-2"></i>შემოგვიერთდი Facebook - ზე
                            </a>

                        </div>
                    </div>
                    <div class="col-md-12">
                        {% if card is null %}
                            <h3 class="text-uppercase text-success text-align-center font-weight-bold my-3">
                                {{ project.field_success_message.getValue().0.value|raw }}
                            </h3>
                        {% endif %}
                        <div class="user-form__finish">
{#                            {{ user_form|without('mail') }}#}
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- End of card -->
    </div>

</div>
{{ attach_library('girchi_banking/girchi_banking') }}

