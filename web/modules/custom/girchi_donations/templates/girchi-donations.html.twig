<div class="bg-gradient-green overflow-hidden">
    <div class="container">
        <!-- Start of head -->
        <div class="text-center py-4 py-sm-6">
            <h5 class="text-white text-uppercase font-weight-bold font-size-5">
                {{ 'Become a partner'|t }}
            </h5>
            <p class="text-white font-size-3 mb-0">
                {{ 'Fund the GIRCHI, get the relevant GeDs and hit the leaderboard'|t }}
            </p>
        </div>
        <div class="card mb-4 mb-sm-8">
            <div class="card-body">
                <div id="message-container"></div>
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div
                            class="px-md-8  px-lg-4 px-xl-8 py-3  py-2 py-md-3  py-xl-4"
                        >
                            <ul
                                class="nav nav-tabs nav-justified"
                                id="myTab"
                                role="tablist"
                            >
                                <li class="nav-item">
                                    <a
                                        class="nav-link active text-uppercase py-3"
                                        id="single-donation-tab"
                                        data-toggle="tab"
                                        href="#single-donation"
                                        role="tab"
                                        aria-controls="single-donation"
                                        aria-selected="true"
                                    >
                                        {{ 'Disposable'|t }}
                                    </a
                                    >
                                    {% if logged_in %}
                                </li>
                                <li class="nav-item">
                                    <a
                                        class="nav-link text-uppercase py-3"
                                        id="multiple-donation-tab"
                                        data-toggle="tab"
                                        href="#multiple-donation"
                                        role="tab"
                                        aria-controls="multiple-donation"
                                        aria-selected="false"
                                    >
                                        {{ 'Multiple'|t }}
                                    </a
                                    >
                                </li>
                                {% endif %}
                            </ul>
                            <div class="tab-content" id="myTabContent">
                                <div
                                    class="tab-pane fade show active"
                                    id="single-donation"
                                    role="tabpanel"
                                    aria-labelledby="single-donation-tab"
                                >
                                    <ul
                                        class="nav nav-tabs nav-justified mx-4"
                                        id="sourceTab"
                                        role="tablist"
                                    >
                                        <li class="nav-item">
                                            <a
                                                class="nav-link active nav-inner text-uppercase pt-3 pb-2"
                                                id="tbc-tab"
                                                data-toggle="tab"
                                                href="#tbc-donation"
                                                role="tab"
                                                aria-controls="tbc-donation"
                                                aria-selected="true"
                                            >
                                                <p
                                                    class="d-flex flex-wrap flex-sm-nowrap align-items-center justify-content-center"
                                                >
                                                    <img
                                                        src="/themes/custom/girchi/dist/css/images/visa.png"
                                                        alt=""
                                                        class="mt-2 mt-sm-0 mr-5 mr-sm-3"
                                                        height="12"
                                                    />
                                                    <img
                                                        src="/themes/custom/girchi/dist/css/images/mc.svg"
                                                        alt=""
                                                        class="mt-2 mt-sm-0 mr-3 mr-sm-0"
                                                        height="12"
                                                    />
                                                </p></a
                                            >
                                        </li>
                                        <li class="nav-item">
                                            <a
                                                class="nav-link text-uppercase nav-inner pt-3 pb-2"
                                                id="paypal-tab"
                                                data-toggle="tab"
                                                href="#paypal-donation"
                                                role="tab"
                                                aria-controls="paypal-donation"
                                                aria-selected="false"
                                            ><p
                                                    class="d-flex flex-wrap flex-sm-nowrap align-items-center justify-content-center"
                                                >
                                                    <img
                                                        src="/themes/custom/girchi/images/paypal-logo.png"
                                                        alt=""
                                                        class="mt-2 mt-sm-0 mr-3 mr-sm-0"
                                                        height="12"
                                                    />

                                                </p></a
                                            >
                                        </li>
                                    </ul>
                                    <div class="tab-content" id="sourceTabContent">
                                        <div
                                            class="tab-pane fade show active"
                                            id="tbc-donation"
                                            role="tabpanel"
                                            aria-labelledby="tbc-donation"
                                            aria-selected="true"
                                        >
                                            <form method="POST">
                                                {{ form_single.form_build_id }}
                                                {{ form_single.form_token }}
                                                {{ form_single.form_id }}
                                                <hr class="border-dashed border-secondary"/>
                                                <div class="d-flex flex-wrap flex-sm-nowrap">
                                                    <div class="form-group w-100 w-md-50 pr-sm-2">
                                                        <label class="form-label" for="amount">{{ 'Amount'|t }}</label>
                                                        {{ form_single.amount }}
                                                    </div>
                                                    <div class="form-group w-100 w-md-50">
                                                        <label class="form-label">
                                                            {{ 'GeD' }}
                                                        </label>
                                                        <div
                                                            class="text-success font-size-5 d-flex pl-3 pt-2"
                                                        >
                                                            <i class="icon-ged"></i>
                                                            <span class="ml-1" id="ged-place1">0</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="description"
                                                    >{{ 'Donation aim'|t }}</label
                                                    >
                                                    <div class="form-control form-control-lg">
                                                        {{ form_single.donation_aim }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="politicians"
                                                    >{{ 'Donation to politician'|t }}</label
                                                    >
                                                    <div class="form-control form-control-lg">
                                                        {{ form_single.politicians }}
                                                    </div>
                                                </div>
                                                {{ form_single.currency }}
                                                {{ form_single.submit }}
                                            </form>
                                        </div>
                                        <div
                                            class="tab-pane fade"
                                            id="paypal-donation"
                                            role="tabpanel"
                                            aria-labelledby="paypal-donation"
                                        >

                                            <form method="POST">
                                                {{ paypal_form.form_build_id }}
                                                {{ paypal_form.form_token }}
                                                {{ paypal_form.form_id }}
                                                <hr class="border-dashed border-secondary"/>
                                                <div class="d-flex flex-wrap flex-sm-nowrap">
                                                    <div class="form-group w-50 w-md-50 pr-sm-2">
                                                        <label class="form-label" for="amount">{{ 'Amount'|t }}</label>
                                                        {{ paypal_form.amount }}
                                                    </div>
                                                    <div class="form-group w-50 w-md-30 px-sm-1 ">
                                                        <label class="form-label" for="amount">ვალუტა</label>
                                                        <div
                                                            class="form-control form-control-lg border-0 font-weight-bold">
                                                            {{ paypal_form.currencies }}
                                                        </div>
                                                    </div>
                                                    <div class="form-group w-100 w-md-50">
                                                        <label class="form-label">
                                                            {{ 'GeD' }}
                                                        </label>
                                                        <div
                                                            class="text-success font-size-5 d-flex pl-3 pt-2"
                                                        >
                                                            <i class="icon-ged"></i>
                                                            <span class="ml-1" id="ged-place-3">0</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="description"
                                                    >{{ 'Donation aim'|t }}</label
                                                    >
                                                    <div class="form-control form-control-lg">
                                                        {{ paypal_form.donation_aim }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="politicians"
                                                    >{{ 'Donation to politician'|t }}</label
                                                    >
                                                    <div class="form-control form-control-lg">
                                                        {{ paypal_form.politicians }}
                                                    </div>
                                                </div>
                                                {{ paypal_form.currency_eur }}
                                                {{ paypal_form.currency_usd }}
                                                {{ paypal_form.donation_id }}
                                                {{ paypal_form.submit }}
                                                <div id="paypal-button-container"></div>
                                            </form>
                                        </div>
                                    </div>

                                </div>
                                {% if logged_in %}
                                    <div
                                        class="tab-pane fade"
                                        id="multiple-donation"
                                        role="tabpanel"
                                        aria-labelledby="multiple-donation-tab"
                                    >
                                        <form method="POST">
                                            {{ form_multiple.form_build_id }}
                                            {{ form_multiple.form_token }}
                                            {{ form_multiple.form_id }}
                                            <p
                                                class="d-flex flex-wrap flex-sm-nowrap align-items-center justify-content-center justify-content-md-between my-2 my-sm-4"
                                            >
                                                <img
                                                    src="/themes/custom/girchi/dist/css/images/tbc-logo-ka-ge.svg"
                                                    alt=""
                                                    class="mt-2 mt-sm-0 mr-3 mr-sm-0"
                                                    height="17"
                                                />
                                                <img
                                                    src="/themes/custom/girchi/dist/css/images/bog-geo-horizontal.png"
                                                    alt=""
                                                    class="mt-2 mt-sm-0 mr-3 mr-sm-0"
                                                    height="17"
                                                />
                                                <img
                                                    src="/themes/custom/girchi/dist/css/images/liberty-geo.svg"
                                                    alt=""
                                                    class="mt-2 mt-sm-0 mr-3 mr-sm-0"
                                                    height="12"
                                                />
                                                <img
                                                    src="/themes/custom/girchi/dist/css/images/visa.png"
                                                    alt=""
                                                    class="mt-2 mt-sm-0 mr-3 mr-sm-0"
                                                    height="12"
                                                />
                                                <img
                                                    src="/themes/custom/girchi/dist/css/images/mc.svg"
                                                    alt=""
                                                    class="mt-2 mt-sm-0 mr-3 mr-sm-0"
                                                    height="17"
                                                />
                                            </p>
                                            <hr class="border-dashed border-secondary"/>
                                            <div class="d-flex flex-wrap flex-sm-nowrap">
                                                <div
                                                    class="form-group form-group w-100 w-md-50 pr-sm-2"
                                                >
                                                    <label class="form-label" for="amount">{{ 'Amount'|t }}</label>
                                                    {{ form_multiple.amount }}
                                                </div>
                                                <div class="form-group w-100 w-md-50">
                                                    <label class="form-label">{{ 'You will get'|t }}</label>
                                                    <div
                                                        class="text-success font-size-5 d-flex pl-3 pt-2"
                                                    >
                                                        <i class="icon-ged"></i>
                                                        <span class="ml-1" id="ged-place-2">0</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-wrap flex-sm-nowrap">
                                                <div class="form-group w-100 w-md-50 pr-sm-2">
                                                    <label class="form-label" for="period"
                                                    >{{ 'Periodicity'|t }}</label
                                                    >
                                                    <div class="form-control form-control-lg">
                                                        {{ form_multiple.frequency }}
                                                    </div>
                                                </div>
                                                <div class="form-group w-100 w-md-50  pl-sm-2">
                                                    <label class="form-label" id="date"
                                                    >{{ 'Donation date'|t }}</label
                                                    >
                                                    <div class="form-control form-control-lg">
                                                        {{ form_multiple.date }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label" for="description"
                                                >{{ 'Donation aim'|t }}</label
                                                >
                                                <div class="form-control form-control-lg">
                                                    {{ form_multiple.donation_aim }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label" for="politicians"
                                                >{{ 'Donation to politician'|t }}</label
                                                >
                                                <div class="form-control form-control-lg">
                                                    {{ form_multiple.politicians }}
                                                </div>
                                            </div>
                                            {{ form_multiple.submit }}
                                        </form>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <div class="px-md-8 px-lg-3 px-xl-5 py-2 py-md-3  py-xl-4">
                            {{ right_block | raw | t }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ attach_library('girchi/donation') }}
