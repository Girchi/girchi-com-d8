<div class="card bg-dark-white border-bottom rounded-bottom-0">
    <div class="card-body text-center">
        <div class="rounded-circle overflow-hidden d-inline-block">
            <img
                    width="70"
                    height="70"
                    src="{{ user_profile_picture }}"
                    alt=""
            />
        </div>
        {% if logged_in %}
            <div class="mt-2">
                <h6
                        class="font-size-base text-uppercase line-height-1-3 mb-1"
                >
                    <span class="d-block">{{ user_first_name }}</span>
                    <span class="font-weight-bold">{{ user_last_name }}</span>
                </h6>
                {% if ged == "1" %}
                    <span
                            class="d-inline-flex align-items-center font-size-4 text-success"
                    ><i class="icon-ged line-height-1-1"></i>
                    <span class="font-weight-bold line-height-0-7 ml-1"
                    >{{ user_ged }}</span
                    ></span
                    >
                {% endif %}


                {% if member == "1" %}
                    <hr>
                    <div class="font-weight-bold">
                        <span class="text-warning d-block font-size-4">#{{ user_id }}</span>
                        <span class="font-size-3 ">{{ user_count }} {{ "members in total"| t }}</span>
                    </div>
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>

