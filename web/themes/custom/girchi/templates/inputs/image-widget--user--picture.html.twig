{#
/**
 * @file
 * Default theme implementation for an image field widget.
 *
 * Available variables:
 * - attributes: HTML attributes for the containing element.
 * - data: Render elements of the image widget.
 *
 * @see template_preprocess_image_widget()
 *
 * @ingroup themeable
 */
#}
<div{{attributes}}>
  <div class="form-group mb-2">
  <div class="mb-3 card card-body bg-light">
      <h5 class="card-title">Cover Photo</h5>
      <div class="row no-gutters">
        <div class="col-md-12">
            {{ data.preview }}
        </div>
        <div class="col-md-12">
          <div class="card-body">
            <button class="btn">
              {{ data.remove_button }}
            </button>
            {{ data|without('preview', 'remove_button', 'title', 'filename') }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
