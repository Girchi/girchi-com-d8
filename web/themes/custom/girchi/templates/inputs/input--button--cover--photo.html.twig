{#
/**
 * @file
 * Default theme implementation for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 *
 * @ingroup themeable
 */
#}


<label for="{{ attributes.id }}" class="btn btn-lg btn-warning">
  {{ 'Choose cover photo' | t }}
</label>
<div class="d-inline">
  <input {{ attributes.addClass('d-none')}} id="{{ attributes.id }}" />{{ children }}
</div>

