{% block page_head %}
    {% include '@girchi/header.htlm.twig' %}
{% endblock %}
<div class="container">
    <!-- Tesla Banner Start -->
    <div
        class="rounded banner-bg-raffle my-3 my-md-4 p-3 p-md-2 d-flex align-items-center"
    >
        <img
            src="{{ theme_path('images/tesla-logo.svg', 1) }}"
            class="mx-5 d-none d-md-inline-block d-lg-none"
            width="60"
            alt="Tesla Logo"
        />
        <img
            src="{{ theme_path('images/tesla-logo.svg', 1) }}"
            class="ml-6 ml-lg-8 mr-6 d-none d-lg-inline-block"
            width="74"
            alt="Tesla Logo"
        />
        <div class="ml-sm-3 ml-md-0">
          <span
              class="text-uppercase line-height-1-3 text-white font-size-4 font-size-md-7 font-size-lg-8 font-weight-bold d-block"
          >მოიგე ტესლა!</span
          >
            <a href="/media/news/3799-cadi-archevnebze-da-moige-tesla" class="btn btn-light text-uppercase mt-2">
                გაიგე მეტი
            </a>
        </div>
        <img
            src="{{ theme_path('images/tesla.png', 1) }}"
            class="ml-auto d-md-none"
            width="50%"
            alt="Tesla Logo"
        />
        <img
            src="{{ theme_path('images/tesla.png', 1) }}"
            class="ml-auto mr-4 d-none d-md-inline-block d-lg-none"
            width="250"
            alt="Tesla Logo"
        />
        <img
            src="{{ theme_path('images/tesla.png', 1) }}"
            class="ml-auto mr-4 d-none d-lg-inline-block"
            width="346"
            alt="Tesla Logo"
        />
    </div>
    <!-- Tesla Banner End -->
    <div class="my-3 my-sm-4">
        {% block page_main %}

            {% if page.content_top %}
                {{ page.content_top }}
            {% endif %}

            {% if page.content %}
                {{ page.content }}
            {% endif %}

            {% if page.content_bottom %}
                {{ page.content_bottom }}
            {% endif %}

        {% endblock %}
    </div>
</div>
{% block page_foot %}
    {% include '@girchi/footer.html.twig' %}
{% endblock %}
